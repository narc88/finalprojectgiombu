// my-template.jade
extends ../layout

//Bloques de contenido.

block profile
	.thumbnail
		img(src="/images/mr_bean.jpg")
	.data
		p #{user.username}

		
block feed
	.feed.well.well-small
		.thumbnail
			img(src="/images/mr_bean.jpg")
		.feed-text
			p El usuario carlitos ha aceptado tu invitacion a ser promotor.

block content
	-if ((typeof deal.sales[0] === "undefined"))
		p No se han encontrado ventas
	-else
		table
			tr
				td
					p Estado
				td
					p Banco
			-each sale in deal.sales
				tr
					td
						p #{sale.status}
					td
						p #{sale.payment_method}
					



block logo
	p Html del logo y boton de novedades.

	
	