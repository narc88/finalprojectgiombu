script(type='text/javascript', src='js/jquery.js')
script(type='text/javascript', src='js/underscore-min.js')
script(type='text/javascript', src='js/backbone.js')
script(type='text/javascript', src='socket.io/socket.io.js')
script(type='text/javascript', src='js/md5-min.js')
script(type='text/javascript', src='js/conversations_front.js')
style(type='text/css')
	body{
		background-image: url("http://www.giombu.com.mx/theme/FrontEndV3/img/bg_layout.jpg");
		background-repeat: no-repeat;
	}
	.contenedor{
		min-width: 760px;
		width:100%;
		color: #333333;  
		font-family: Century Gothic, sans-serif;  
		margin-top: -10px;
	}
	.add_contact_to_conversation img{
		float:right;
	}
	.columna {
		min-width: 160px;
		float: left;
		width: 20%;
		height: 400px;
		background-color: transparent;
		color: black;
		margin:5px;
		border:1px solid gray;
		overflow-y:scroll;
		overflow-x:none;

	}
	.titles{
		width:100%;
		height: 50px;
	}

	.columna_title{
		height: 50px;
		float: left;
		width: 20%;
		background-color: transparent;
		margin: 5px;
		color: #505050;
		font-weight:bold;
	}
	.current_conversation{
		height: 36px;
		float: left;
		width: 50%;
		background-color: transparent;
		margin: 5px;
		text-align:center;
		padding-top: 14px;
		color: #505050;
		font-weight:bold;
	}

	.columnaChat {
		float: left;
		min-width: 200px;
		width: 100%;
		height: 300px;
		background-color: transparent;
		color: black;
		border:1px solid gray;
	}
	.input_message{
		float: left;
		width: 100%;
		margin-top: 7px;
		height: 90px;
		background-color: white;
		color: black;

	}
	#chat_window{
		float: left;
		width: 50%;
		margin:5px;
		height: 400px;
	}
	.message{
		height: 100%;
		width: 100%;
		resize:none;
		border:1px solid gray;
	}
	.columnaChat .id1{
		margin:0px;
	}
	.log{
		height: 98%;
		width: 100%;
		overflow-y: scroll;
		padding-top: 5px;
		
	}
	.contact_element{
		width: 100%;
		margin:5px;
		height: 40px;
		float:left;
	}
	.conversation{
		width: 80%;
		min-height: 1em;
		float: left;
		min-height: 40px;
	}
	.conversation img{
		float:right;
		margin: 0px;
	}
	.conversation:hover{
		cursor: pointer; cursor: hand
	}
	.remove{
		float: right;
		margin-right: 4px;
	}
	.remove:hover{
		cursor: pointer; cursor: hand
	}
	#user{
		float: left;
		width: 20%;
		margin: 10px;
		background-color: green;
		color: white;
	}
	#add_contacts{
		float: left;
		width: 20%;
		margin: 10px;
		background-color: green;
		color: white;
	}
	#top{
		width: 100%;
		height: 150px;
	}
	.header{
		text-align:center;
	}
	.conv_element,.contact_element {
		width: 90%;
		background-color: transparent ;
		margin:5px;
		display:inline-block;
		color: #505050;
		font-family:arial;
		font-size:15px;
		padding:5px;
		text-decoration:none;
	}

	.message_line, .message_nickname {
		font-size:13px;
		color: #707070;
		min-height: 13px;
		background-color: transparent;
		padding:5px;
		margin-right: 5px;
		margin-left: 5px;
	}


	.message_nickname {
		border-top: 1px solid gray;
		font-weight:bold;
		margin-top:5px;
	}

	.conv_element:hover,.contact_element:hover {
		background-color: #B0FEB4;
		cursor: pointer; cursor: hand;
	}
	.contact_add_conversation{
		width:20%;
		float:right;
	}
	.contact_image{
		width:25%;
		float:left;
		height: 40px;
	}
	.contact_username{
		width:60%;
		height: 40px;
		float:left;
	}
	#giombu_logo{
		float:left;
	}
	.contenedor_chat{
		width:100%;
		float:left;
	}
	.user_profile{
		width: 400px;
		float: left;
		margin: 15px 0px 0px 50px;
	}


div( class='contenedor' , id='#{user_id}' )
	img( id="giombu_logo", src="http://giombu.com.mx/theme/FrontEndV3/img/logo_giombu.png")
	div( class='user_profile')
		p
			b #{user.fullname} - #{user.username}
	.contenedor_chat
		.titles
			.current_conversation
			.columna_title
				p.header Chats
			.columna_title
				p.header Contactos
		#chat_window
			.columnaChat
				.log
			.input_message
				textarea(type='text', id='id1',class='message', placeholder='Escribe un mensaje y presiona Enter')
		.columna
			#conversations
		.columna
			
			#contacts
		