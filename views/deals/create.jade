// my-template.jade
extends ../layout


//Bloque de contenido.
block content
	script
		$(document).ready(function(){
			$('#start_date').datepicker();
			$('#end_date').datepicker();
			$('#start_redeem').datepicker();
			$('#end_redeem').datepicker();
			$('#start_time').timepicker({
				minuteStep: 15,
				template: 'dropdown',
				showSeconds: false,
				showMeridian: false,
				defaultTime: '00:00'
			});
			$('#end_time').timepicker({
				minuteStep: 15,
				template: 'dropdown',
				showSeconds: false,
				showMeridian: false,
				defaultTime: '00:00'
			});
		});
	.contenedor
		h3 Cargar oferta
		.span5
			form(method='post', action='/deals/add').form-horizontal
				.control-group
					label.control-label Titulo
					input(name='deal[title]', type='text').control
				br
				.control-group
					label.control-label Tagline
					input(name='deal[tagline]', type='text').control 
				br
				.control-group
					label.control-label Slug
					input(name='deal[slug]', type='text').control 
				br
				.control-group
					label.control-label Características
					input(name='deal[characteristics]', type='text').control 
				br
				.control-group
					label.control-label Condiciones
					input(name='deal[conditions]', type='text').control 
				br
				.control-group
					label.control-label Precio
					input(name='deal[price]', type='text').control 
				br
				.control-group
					label.control-label Descuento
					input(name='deal[discount]', type='text').control
				br
				.control-group 
					label.control-label Precio especial
					input(name='deal[special_price]', type='text').control 
				br
				.control-group
					label.control-label Fecha de comienzo
					input(name='deal[start_date]', type='text').control#start_date
				br
				.control-group
					label.control-label Hora de comienzo
					input(name='start_time', type='text', value="00:00").control#start_time
				br
				.control-group
					label.control-label Hora de comienzo
					input(name='end_time', type='text', value="00:00").control#end_time
				br
				.control-group
					label.control-label Fecha de fin
					input(name='deal[end_date]', type='text').control#end_date
				br
				.control-group
					label.control-label Inicio fecha de canje
					input(name='deal[start_redeem]', type='text').control#start_redeem
				br
				.control-group
					label.control-label Fin fecha de canje
					input(name='deal[end_redeem]', type='text').control#end_redeem
				br
				.control-group
					label.control-label Maximo de cupones
					input(name='deal[max_coupons]', type='text').control
				.control-group
					label.control-label Maximo de cupones por usuario
					input(name='deal[max_coupons_by_user]', type='text').control 
				.control-group
					label.control-label Porcentaje para el vendedor
					input(name='deal[seller_percentage]', type='text').control
				br
				.control-group 
					label.control-label Porcentaje giombu
					input(name='deal[giombu_percentage]', type='text').control 
				br
				.control-group
					label.control-label  Porcentaje para promotor
					input(name='deal[promoter_percentage]', type='text').control 
				br
				.control-group
					label.control-label Estado
					select(name='deal[status]')
						option(value="draft") draft
						option(value="active") active
						option(value="closed") closed
				br
				.control-group 
					label.control-label Costo de envío
					input(name='deal[shipping_cost]', type='text').control 
				br
				.control-group
					input(name='submit', type='submit').btn.control Enviar
					br
				