// my-template.jade
extends ../home

block content
	.body_container.carousel-container.master_article 
		div(id="myCarousel").carousel.slide
			.carousel-inner
				.item.active
					a(href="www.ole.com.ar")
						img( src="/images/243_large_f4415b921f7e566042424fb70b1ba3a4.jpeg", class="image")
				.item
					a(href="www.ole.com.ar")
						img( src="/images/243_large_f4415b921f7e566042424fb70b1ba3a4.jpeg", class="image")
			.caption-top.transparent
				.row
					.span8
						h1
							a(href="#", style="font-size:1.1em;") #{deals[0].title}
						p
							a(href="#", style="font-size:0.9em;") #{deals[0].tagline}
					.span2.pull-right
						.buy.boxshadow.special_price.no_transparent
							a(href="alalalallong/checkout")
								.buy_box 
									img( src="/img/checkout.png")
									p 
									p
									p COMPRAR				
					.span2.pull-right
						.special_price.boxshadow.no_transparent
							a(href="lalalalalong")
								.detalles(style="font-size:0.8em;")
										br
										$ #{deals[0].special_price}
										br
										span(style="font-size:0.5em;") VER DETALLES
			.caption-left.boxshadow.borderradius.transparent 
				.row
					.span.price 
						label Precio Original
						span $ #{deals[0].price}
					.span.discount 
						label Descuento 
						span #{deals[0].discount} %
				.row.time
					div.clock.span
						img(src="http://83b0c28c61b2c8602f7c-5408f05fecb415ed1f9fde302a13d016.r42.cf1.rackcdn.com/countdown.png")
					div(class="span countdown hasCountdown",id="ppal01", data-end="#{deals[0].end_date.getMonth()+1}/#{deals[0].end_date.getDate()}/#{deals[0].end_date.getFullYear()} #{deals[0].end_date.getHours()}:#{deals[0].end_date.getMinutes()}:#{deals[0].end_date.getSeconds()}", data-gmt="-#{deals[0].end_date.getTimezoneOffset()/60}")
			a(class="carousel-control left" , href="#myCarousel",  data-slide="prev")‹
			a(class="carousel-control right" , href="#myCarousel",  data-slide="next")›
	-for (var i = deals.length - 1; i >= 1; i--) {
		.row.items
			.span4.item
				.image
					a(href="alalalallong/checkout") 
						img( src="/images/243_large_f4415b921f7e566042424fb70b1ba3a4.jpeg", class="image")
				.caption
					h2
						a(href="alalalallong/checkout") #{deals[i].title}
					p
						a(href="alalalallong/checkout") #{deals[i].tagline}
				.row.buttons
					.span1
						.price 
							label Normal
							p $ #{deals[i].price}
						.discount
							label Descuento
							p #{deals[i].discount} %
					.span2
						.special_price
							label Oferta
							p $ #{deals[i].special_price}
				.row.buttons
					.span1
						.clock
							img(src="http://83b0c28c61b2c8602f7c-5408f05fecb415ed1f9fde302a13d016.r42.cf1.rackcdn.com/countdown.png")
					.span3
						.countdown(id='#{i}' ,data-end="#{deals[i].end_date.getMonth()+1}/#{deals[i].end_date.getDate()}/#{deals[i].end_date.getFullYear()} #{deals[i].end_date.getHours()}:#{deals[i].end_date.getMinutes()}:#{deals[i].end_date.getSeconds()}", data-gmt="-#{deals[i].end_date.getTimezoneOffset()/60}")
	-};	
	