// my-template.jade
extends ../layout

//Bloque de contenido.
block content
	.container
		.form_container.span5
			form(method='post', action='/franchisors/update' ).form-horizontal
				input(name='franchisor_id', type='hidden', value='#{franchisor._id}') 
				.control-group
					label.control-label name
					input(name='franchisor[name]', type='text', value='#{franchisor.name}').control
				br
				.control-group
					label.control-label default_domain
					input(name='franchisor[default_domain]', type='text', value='#{franchisor.default_domain}').control
				br
				.control-group
					label.control-label secure_domain
					input(name='franchisor[secure_domain]', type='text', value='#{franchisor.secure_domain}').control
				br
				.control-group
					label.control-label tlc
					input(name='franchisor[tlc]', type='text', value='#{franchisor.tlc}').control
				br
				.control-group
					label.control-label email
					input(name='franchisor[email]', type='text', value='#{franchisor.email}').control
				br
				.control-group
					label.control-label smtp
					input(name='franchisor[smtp]', type='text', value='#{franchisor.smtp}').control
				br
				.control-group
					label.control-label default_timezone
					input(name='franchisor[default_timezone]', type='text', value='#{franchisor.default_timezone}').control
				br
				.control-group
					label.control-label locale
					input(name='franchisor[locale]', type='text', value='#{franchisor.locale}').control
				br
				.control-group
					label.control-label language
					input(name='franchisor[language]', type='text', value='#{franchisor.language}').control
				br
				.control-group
					label.control-label fanpage
					input(name='franchisor[fanpage]', type='text', value='#{franchisor.fanpage}').control 
				br
				.control-group
					input(type='submit', value='Guardar').btn.control